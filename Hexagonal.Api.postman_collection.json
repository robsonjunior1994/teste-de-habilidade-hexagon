				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Verifica se a resposta foi bem-sucedida\r",
									"if (pm.response.code === 200) {\r",
									"    // Parse da resposta JSON\r",
									"    const responseData = pm.response.json();\r",
									"    \r",
									"    // Verifica se o token existe na resposta\r",
									"    if (responseData.isSuccess && responseData.data && responseData.data.token) {\r",
									"        // Armazena o token na variável global 'jwt'\r",
									"        pm.globals.set(\"jwt\", responseData.data.token);\r",
									"        \r",
									"        // Log para confirmar que o token foi salvo\r",
									"        console.log(\"Token JWT salvo nas variáveis globais:\", responseData.data.token);\r",
									"    } else {\r",
									"        console.log(\"Token não encontrado na resposta\");\r",
									"    }\r",
									"} else {\r",
									"    console.log(\"Login falhou - Código:\", pm.response.code);\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
